<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.result.ResultFragment">

    <TextView
        android:id="@+id/tv_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="8dp"
        android:text="@string/result_title"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@id/iv_result" />

    <ImageView
        android:id="@+id/iv_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/iv_background"
        android:src="@drawable/ic_result_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_result_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        android:textColor="@color/purple_200"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_result"
        app:layout_constraintEnd_toEndOf="@id/iv_result"
        app:layout_constraintStart_toStartOf="@id/iv_result" />

    <Button
        android:id="@+id/btn_try_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/result_btn"
        app:layout_constraintEnd_toEndOf="@id/iv_result"
        app:layout_constraintStart_toStartOf="@id/iv_result"
        app:layout_constraintTop_toBottomOf="@id/iv_result" />

</androidx.constraintlayout.widget.ConstraintLayout>